  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'cli'",
      "cargo": {
        "args": ["build", "--package=r6502", "--bin=r6502"],
        "filter": {
          "name": "r6502",
          "kind": "bin"
        }
      },
      // "args": ["-f=tests/6502_functional_test.bin"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'cli'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=cli", "--package=cli"],
        "filter": {
          "name": "cli",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'emulator'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=mos6502-emulator"],
        "filter": {
          "name": "mos6502-emulator",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
